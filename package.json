{
  "name": "packages-templates",
  "version": "1.1.0",
  "description": "",
  "license": "UNLICENSED",
  "author": "",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "build": "tsup",
    "commit": "git-cz",
    "format": "prettier --write \"src/**/*.{ts,js,tsx,jsx,css,scss,html,json,md,mdx,markdown,graphql,prisma}\" && sort-package-json",
    "format:check": "prettier --check \"src/**/*.{ts,js,tsx,jsx,css,scss,html,json,md,mdx,markdown,graphql,prisma}\"",
    "lint": "eslint --ext .ts,.js,.tsx,.jsx src",
    "lint:fix": "eslint --ext .ts,.js,.tsx,.jsx src --fix",
    "prepare": "husky",
    "prepublishOnly": "npm run build",
    "semantic-release": "semantic-release",
    "setup-git-aliases": "./setup-git-aliases.sh",
    "sort-package-json": "sort-package-json",
    "test": "jest",
    "preversion": "npm run build"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.32.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/npm": "^12.0.2",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "commit-and-tag-version": "^12.5.2",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.32.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.7",
    "sort-package-json": "^3.4.0",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=22.0.0"
  }
}
