{
  "name": "@jullury-fluent/packages-templates",
  "version": "1.0.0",
  "description": "Template for creating TypeScript packages",
  "repository": {
    "type": "git",
    "url": "https://github.com/jullury-fluent/packages-template.git"
  },
  "license": "UNLICENSED",
  "author": "EquiSafe Team",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "build": "tsup",
    "commit": "git-cz",
    "format": "prettier --write \"src/**/*.{ts,js,tsx,jsx,css,scss,html,json,md,mdx,markdown,graphql,prisma}\" && sort-package-json",
    "format:check": "prettier --check \"src/**/*.{ts,js,tsx,jsx,css,scss,html,json,md,mdx,markdown,graphql,prisma}\"",
    "lint": "eslint --ext .ts,.js,.tsx,.jsx src",
    "lint:fix": "eslint --ext .ts,.js,.tsx,.jsx src --fix",
    "prepare": "husky && pnpm setup-git-aliases",
    "prepublishOnly": "npm run build",
    "semantic-release": "semantic-release",
    "setup-git-aliases": "./setup-git-aliases.sh",
    "sort-package-json": "sort-package-json",
    "test": "jest",
    "preversion": "npm run build"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,html,json,md,mdx,markdown,graphql,prisma}": [
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.36.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.6",
    "@semantic-release/npm": "^12.0.2",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.1.2",
    "lint-staged": "^16.2.0",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.9",
    "sort-package-json": "^3.4.0",
    "ts-jest": "^29.4.4",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "packageManager": "pnpm@10.17.1",
  "engines": {
    "node": ">=22.0.0"
  },
  "volta": {
    "node": "22.20.0"
  },
  "publishConfig": {
    "access": "restricted",
    "registry": "https://npm.pkg.github.com/"
  }
}
